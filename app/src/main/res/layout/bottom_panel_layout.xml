<?xml version="1.0" encoding="utf-8"?>
<com.example.jasonhu.recommendpoi.ui.BottomControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <com.example.jasonhu.recommendpoi.ui.ImageText
        android:id="@+id/btn_message"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <com.example.jasonhu.recommendpoi.ui.ImageText
        android:id="@+id/btn_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_message" />

    <com.example.jasonhu.recommendpoi.ui.ImageText
        android:id="@+id/btn_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btn_contacts" />

    <com.example.jasonhu.recommendpoi.ui.ImageText
        android:id="@+id/btn_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

</com.example.jasonhu.recommendpoi.ui.BottomControlPanel>