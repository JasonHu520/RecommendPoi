<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/whitesmoke"
    tools:ignore="RtlSymmetry">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:paddingStart="10dp"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/headPic_for_friend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/user" />

        <RelativeLayout
            android:id="@+id/layout_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/headPic_for_friend">

            <TextView
                android:id="@+id/tv_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大哥"
                android:textColor="@color/smssdk_black" />

            <TextView
                android:id="@+id/tv_friend_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_friend_name"
                android:layout_marginTop="-1dp"
                android:text="你好啊" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_friend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="4dp"
            android:paddingEnd="10dp"
            android:text="this time" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/my_gray"/>

</LinearLayout>