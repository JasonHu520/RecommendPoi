<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_list_history"
        android:layout_width="336dp"
        android:layout_height="49dp"
        android:gravity="center_horizontal"
        android:text="55"
        android:textSize="33dp" />

    <TextView
        android:id="@+id/history_delete"
        android:layout_toRightOf="@id/tv_list_history"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:text="x" />
    <TextView
        android:id="@+id/tv_history_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_list_history"
        android:text="2018/5/31/19:00"
        />
    <View
        android:layout_below="@id/tv_history_time"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@color/gray"
        />


</RelativeLayout>
